<?xml version="1.0" encoding="UTF-8" ?>
 <root>
     <resourceType>StructureDefinition</resourceType>
     <id>FlagCondition</id>
     <url>https://fhir.nhs.uk/England/StructureDefinition/FlagCondition</url>
     <version>0.1.0</version>
     <name>FlagCondition</name>
     <title>NHSE Condition Profile for flags</title>
     <status>draft</status>
     <date>2024-02-14</date>
     <description>Record an individual condition for a flag in NHS England</description>
     <fhirVersion>4.0.1</fhirVersion>
     <kind>resource</kind>
     <abstract>false</abstract>
     <type>Condition</type>
     <baseDefinition>http://hl7.org/fhir/StructureDefinition/Condition</baseDefinition>
     <derivation>constraint</derivation>
     <differential>
         <element>
             <id>Condition.contained</id>
             <path>Condition.contained</path>
             <slicing>
                 <discriminator>
                     <type>profile</type>
                     <path>contained</path>
                 </discriminator>
                 <rules>open</rules>
             </slicing>
             <min>1</min>
         </element>
         <element>
             <id>Condition.contained:provenance</id>
             <path>Condition.contained</path>
             <sliceName>provenance</sliceName>
             <min>1</min>
             <max>1</max>
         </element>
         <element>
             <id>Condition.category</id>
             <path>Condition.category</path>
             <slicing>
                 <discriminator>
                     <type>pattern</type>
                     <path>$this</path>
                 </discriminator>
                 <rules>open</rules>
             </slicing>
             <min>2</min>
         </element>
         <element>
             <id>Condition.category:patientFlag</id>
             <path>Condition.category</path>
             <sliceName>patientFlag</sliceName>
             <min>1</min>
             <max>*</max>
             <mustSupport>true</mustSupport>
         </element>
         <element>
             <id>Condition.category:conditionCategory</id>
             <path>Condition.category</path>
             <sliceName>conditionCategory</sliceName>
             <min>1</min>
             <max>*</max>
             <mustSupport>true</mustSupport>
         </element>
         <element>
             <id>Condition.code</id>
             <path>Condition.code</path>
             <min>1</min>
             <mustSupport>true</mustSupport>
         </element>
     </differential>
 </root>
